<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gmmha.dailyexpense">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".nav.activity.ProfileActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".nav.activity.AboutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".nav.activity.pieChartActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".content.activity.MedicalActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ContentActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".nav.activity.BalanceActivity"
            android:parentActivityName=".MainActivity"
            ></activity>
    </application>

</manifest>